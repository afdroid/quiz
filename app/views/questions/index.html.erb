<div class="container">
<h1>Listing question</h1>
<p>Total: <%= @questions.size %></p>
<p><%= link_to 'New Question', new_question_path, :class => "btn btn-primary", :style => "color:white" %></p>
<table border="1" class="table table-bored table-hover">
  <tr>
    <th>Text</th>
    <th>Choices</th>
    <th colspan="3">Opciones</th>
  </tr>
  <% @questions.each do |question| %>
  <tr>
    <td><%= question.text %></td>
    <td>
      <ul>
        <% question.choices.each do |choice| %>
        <li>
          <%= choice.text %>
          <% if choice.correct == "1".to_i %>(Correct)<% end %>
        </li>
          <% end %>
      </ul>
    </td>
    <td> <%= link_to 'Show', question, :class => "btn btn-default" %></td>
    <td><%= link_to 'Edit', edit_question_path(question), :class => "btn btn-default" %></td>
    <td><%= link_to 'Destroy', question, :class => "btn btn-danger", :style => "color:white;", :confirm => 'Â¿Estas seguro?', :method => :delete %></td>
  </tr>
    <% end %>
</table>
<% content_for(:title) do %>
All questions
<% end %>
</div>
