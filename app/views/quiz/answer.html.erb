<div class="container">

<h1>Question <%= @current + 1%> of <%= @total %></h1>
<p id="question">
  <%= @question[:text] %>
</p>
<div id="feedback-choices">
  <% @choices.each do |choice| %>
  <% if(choice[:correct]) %>
    <p class="correct feedback-choice">
  <% elsif choice == @choice %>
    <p class="incorrect feedback-choice">
  <% else %>
    <p class="feedback-choice">
  <% end %>
  <%= choice[:text] %>
  </p>
  <% end %>
</div>

  <% if @correct %>
  <div class="alert alert-success">
  <h4>Correct!</h4>
  <% else %>
  <div class="alert alert-danger">
  <h4>Incorrect!</h4>
  <% end %>
</div>
<%= form_tag({:controller => 'quiz', :action => 'question'}) do %>
<div class="center">
  <%= submit_tag('Continue', :class => 'submit btn btn-primary') %>
</div>
<% end %>
<% content_for(:title) do %>
Question <%= @current + 1 %> of <%= @total %>
<% end %>
</div>

